@model IEnumerable<FlightFinalSite.Models.Passenger>

@{
    ViewBag.Title = "Passengers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PassengerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassengerSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassengerTel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassengerBirthDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerBirthDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PassengerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PassengerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PassengerID })
            </td>
        </tr>
    }

</table>

<hr />
<div>
    @Html.ActionLink("Back to Options", "Index", "Home")
</div>