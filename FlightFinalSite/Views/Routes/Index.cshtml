@model IEnumerable<FlightFinalSite.Models.Route>

@{
    ViewBag.Title = "Routes";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RouteFlightNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RouteDepAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RouteArrAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RouteDepDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RouteArrTDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plane.PlaneName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteFlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteDepAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteArrAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteDepDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteArrTDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.PlaneName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RouteID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RouteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RouteID })
            </td>
        </tr>
    }

</table>

<hr />
<div>
    @Html.ActionLink("Back to Options", "Index", "Home")
</div>