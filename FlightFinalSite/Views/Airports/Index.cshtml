@model IEnumerable<FlightFinalSite.Models.Airport>

@{
    ViewBag.Title = "Airports";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AirportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportAbbre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AirportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportAbbre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AirportID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AirportID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AirportID })
            </td>
        </tr>
    }

</table>

<hr />
<div>
    @Html.ActionLink("Back to Options", "Index", "Home")
</div>
